{
  "name": "verification-layer",
  "version": "0.12.0",
  "description": "CLI tool for HIPAA compliance scanning and reporting",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "vlayer": "dist/cli.js"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "hipaa",
    "compliance",
    "healthcare",
    "security",
    "cli",
    "scanner",
    "phi",
    "audit",
    "encryption",
    "medical",
    "protected-health-information",
    "vulnerability-scanner",
    "static-analysis",
    "security-scanner",
    "hipaa-compliance",
    "baseline",
    "suppression",
    "github-action"
  ],
  "author": "Simon Franco",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Francosimon53/verification-layer.git"
  },
  "bugs": {
    "url": "https://github.com/Francosimon53/verification-layer/issues"
  },
  "homepage": "https://github.com/Francosimon53/verification-layer#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "semantic-release": "^24.2.9",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@types/pdfkit": "^0.17.4",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "glob": "^10.3.0",
    "minimatch": "^10.1.1",
    "ora": "^8.0.0",
    "pdfkit": "^0.17.2",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
